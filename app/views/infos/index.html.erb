 <% if user_signed_in? %>

    <script src="//maps.google.com/maps/api/js?key=AIzaSyDRH5WShDBpzc8VqTRTksi8DDxZ9Qlw5no"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->



    <p id="notice"><%= notice %></p>

    <h1>Listing Infos</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>User</th>
          <th>Birthday</th>
          <th>Address</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Email</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @infos.each do |info| %>
          <tr>
            <td><%= info.user_id %></td>
            <td><%= info.birthday %></td>
            <td><%= info.address %></td>
            <td><%= info.latitude %></td>
            <td><%= info.longitude %></td>
            <td><%= info.email %></td>
            <td><%= info.description %></td>
            <td><%= link_to 'Show', info %></td>
            <td><%= link_to 'Edit', edit_info_path(info) %></td>
            <td><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Info', new_info_path %>



    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
    </div>

    <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();

     });


    </script>

<%end %>